{
  "name": "file-searcher",
  "displayName": "Fast File Picker",
  "description": "Searching files on the fly",
  "version": "0.0.3",
  "publisher": "vscode-wwm-quickpick",
  "engines": {
    "vscode": "^1.32.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "wwm.quickInput",
        "title": "filepicker: Search Files"
      },
      {
        "command": "wwm.buildFileList",
        "title": "filepicker: Build File List Database"
      },{
        "command": "wwm.cancelExcludeDir",
        "title": "filepicker: cancel exclude dirs"
      },{
        "command": "wwm.excludeDir",
        "title": "filepicker: exclude dirs"
      }
    ],
    "keybindings": [
      {
        "command": "wwm.quickInput",
        "key": "ctrl+p",
        "mac": "cmd+p"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "filepicker configurations",
      "properties": {
          "filepicker.excludeDirs": {
              "type": "string",
              "default": "",
              "description": "Specifies the folders that you don't want to be indexed, multiple dirs are sepearted by \":\" letter, e.g. ${workspace}/out:${workspace}/build:/mnt/aosp/cts/:.git, fyi, ${workspace} will be replaced with the path of the opened workspace. By default, all hidden files and folder will be skipped, you can manually add a directory into indexing by `right click` in the explorer sidebar and click 'filepicker: add into indexing'"
          }
      }
    },
    "menus": {
      "explorer/context": [{
          "when": "explorerResourceIsFolder",
          "command": "wwm.cancelExcludeDir",
          "group": "filepicker"
      },{
        "when": "explorerResourceIsFolder",
        "command": "wwm.excludeDir",
        "group": "filepicker"
    }]
  }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "tslint -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^10.14.8",
    "@types/vscode": "^1.32.0",
    "tslint": "^5.16.0",
    "typescript": "^3.5.1"
  },
  "dependencies": {}
}